---
import Layout from "../layouts/Layout.astro";
---

<style>
  .image-container {
    position: relative;
    width: 100%;
    height: calc(100vh - 100px); /* Resta la altura de la barra naranja */
  }
  .full-screen-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ajusta la imagen para que cubra el área sin distorsión */
  }
  .overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white; /* Color del texto */
  }
  .overlay h1 {
    font-size: 4rem; /* Ajusta el tamaño según tus necesidades */
    margin-bottom: 20px;
  }
  .overlay button {
    padding: 10px 20px;
    font-size: 1.5rem;
    background-color: #ff9900; /* Color del botón */
    border: none;
    cursor: pointer;
  }
  .image-grid-container {
    margin-left: 200px;
	margin-right: 200px; 
	margin-top: 100px; /* Aplica márgenes a todos los lados */
/* Aplica márgenes a todos los lados */
 /* Aplica márgenes a todos los lados */
  }
  .image-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columnas iguales */
    gap: 20px; /* Espacio entre las imágenes */
  }
  .image-item img {
    width: 100%; /* Ocupa todo el espacio disponible */
    height: auto; /* Mantiene la proporción de la imagen */
    object-fit: cover; /* Ajusta la imagen para que cubra el área sin distorsión */
  }
  .centered-content {
    text-align: center; /* Centra horizontalmente */
    margin-top: 50px; /* Ajusta el espacio superior según sea necesario */
  }

  .centered-content h2 {
    font-size: 2rem; /* Tamaño del texto del encabezado */
  }

  .centered-content p {
    font-size: 1rem; /* Tamaño del texto del párrafo */
  }
  .Mirta {
    background-color: rgb(241, 212, 119);
    margin-top: 100px; /* Reducido para ajuste */
    padding: 50px; /* Agregado para espacio interno */
    text-align: center; /* Centrado horizontal */
  }

  .Mirta-content {
    max-width: 600px; /* Ancho máximo para el contenido */
    
	display: flex; /* Centrado horizontal */
  }

  .Mirta-content img {
    width: 100%; /* Ocupa todo el ancho del contenedor */
    max-width: 300px; /* Ancho máximo para la imagen */
    height: auto; /* Mantiene la proporción */
    margin-bottom: 20px; /* Espacio inferior */
  }

  .Mirta-content h2 {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  .Mirta-content p {
    font-size: 1rem;
  }
</style>
